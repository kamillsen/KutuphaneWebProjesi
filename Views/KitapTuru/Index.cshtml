@model List<KitapTuru>

    <div class="container">  
        <div class="row pt-3 pb-4">
            <div>
                <h1>Kitap Türleri</h1>
            </div>   
        </div>
    <table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Kitap Türü
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var kitapturu in Model)
        {
            <tr>
                <td>@kitapturu.Id</td>
                <td>@kitapturu.Ad</td>
                <td>
                <a asp-controller="KitapTuru" asp-action="Guncelle" type="buttton" class="btn btn-success" style="width:150px">Güncelle</a>
                </td>
                 <td>
                <a asp-controller="KitapTuru" asp-action="Guncelle" type="buttton" class="btn btn-danger" style="width:150px">Sil</a>
                </td>
            </tr>
        }
    </tbody>
   
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>
    </div>

    </div>